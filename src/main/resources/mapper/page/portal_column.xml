<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace='portal_column'>

    <insert id="insert" parameterType="java.util.HashMap">
        insert into portal_column(uuid,portal_column_name,portal_column_key,portal_column_umdjs,portal_column_option_str) VALUES
            (#{uuid,jdbcType=VARCHAR},#{portal_column_name,jdbcType=VARCHAR},#{portal_column_key,jdbcType=VARCHAR},
             #{portal_column_umdjs,jdbcType=BLOB},#{portal_column_option_str,jdbcType=BLOB});
    </insert>

    <!-- 查找某采集任务表的图片字段 -->
    <select id="findUmd" parameterType="java.util.HashMap" resultType="java.util.HashMap" useCache="false">
        SELECT portal_column_umdjs FROM portal_column t where 1=1
        <if test="uuid!=null and uuid!=''">
            and t.uuid=#{uuid, jdbcType=VARCHAR}
        </if>
    </select>


    <!-- 查找某采集任务表的图片字段 -->
    <select id="findPortalColumnOption" parameterType="java.util.HashMap" resultType="java.util.HashMap" useCache="false">
        SELECT portal_column_option_str FROM portal_column t where 1=1
        <if test="uuid!=null and uuid!=''">
            and t.uuid=#{uuid, jdbcType=VARCHAR}
        </if>
    </select>




</mapper>
